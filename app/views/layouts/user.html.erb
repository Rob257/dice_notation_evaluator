<!DOCTYPE html>
<html>
  <head>

    <title>Dice Notation Evaluator : User</title>
    <%= stylesheet_link_tag "user" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>

  </head>
  <body>
    <div class="container">

      <div class="header">
        <h1 class="header">
          <% if @user %>
            User: <%= @user.name %>
          <% end %>
        </h1>
      </div>

      <div>

        <div class="sidebar">
          <ul>
            <li><%= link_to 'Home', {:controller=>'home',:action=>'index'} %></li>
          </ul>
        </div>

        <div class="content">
          <%= yield %>
        </div>

      </div>

      <div class="footer">

      </div>

    </div>
  </body>
</html>

