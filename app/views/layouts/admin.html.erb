<!DOCTYPE html>
<html>
  <head>

    <title>Dice Notation Evaluator : User</title>
    <%= stylesheet_link_tag "admin" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>

  </head>
  <body>
    <div class="container">

      <div class="header">
        <h1 class="header">
          <% if @admin -%>
            Admin: <%= @admin.name %>
          <% end -%>
        </h1>
      </div>

      <div>

        <div class="sidebar">
          <ul>
            <li><%= link_to 'Home', {:controller=>'home',:action=>'index'} %></li>
            <% if @admin -%>
              <li><%= link_to 'Admin Home',
                              {:controller=>'admin',
                               :action=>'index'} %></li>
              <li><%= link_to 'Log Out', {:controller=>'admin',:action=>'logout'} %></li>
              <li><%= link_to 'User Accounts',
                              {:controller=>'user_accounts',
                               :action=>'index'} %></li>
              <li><%= link_to 'Admin Accounts',
                              {:controller=>'admin_accounts',
                               :action=>'index'} %></li>
            <% end -%>
          </ul>
        </div>

        <div class="content">
          <%= yield %>
        </div>

      </div>

      <div class="footer">

      </div>

    </div>
  </body>
</html>

