<!DOCTYPE html>
<html>
  <head>

    <title>Dice Notation Evaluator</title>
    <%= stylesheet_link_tag 'home' %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>

  </head>
  <body>
    <div class="container">

      <div class="header">
        <h1 class="header">
          <% if @user %>
            Hello, <%= @user.name %>.
          <% else -%>
            Welcome.
          <% end %>
        </h1>
      </div>

      <div>

        <div class="sidebar">
          <ul>
            <% if @user %>
              <li><%= link_to 'Edit User', {:controller=>'user',:action=>'edit'} %></li>
              <li><%= link_to 'Log Out', {:controller=>'user',:action=>'logout'} %></li>
            <% else -%>
              <li><%= link_to 'Log In', {:controller=>'user',:action=>'login'} %></li>
              <li><%= link_to 'Register', {:controller=>'user',:action=>'new'} %></li>
            <% end -%>
            <li><%= render 'help_link' %></li>
          </ul>
        </div>

        <div class="content">

          <%= yield %>

        </div>

      </div>

      <div class="footer">

      </div>

    </div>
  </body>
</html>

